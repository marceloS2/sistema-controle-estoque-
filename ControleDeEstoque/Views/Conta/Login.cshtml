@model ControleDeEstoque.Models.LonginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">
    <div class="row">
        <h3 class="titulo">Entrar no Sistemas</h3>
    </div>
    <div class="row">
        <section id="loginFora">
            <!---Aqui tem a controle Conta chamando -->
            @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "Form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!--validação-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Usuario, new { @class = "form-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" }) <!--Validação -->

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Senha, new { @class = "form-label col-md-4" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-4">
                        @Html.CheckBoxFor(m => m.LembraMe)
                        @Html.LabelFor(m => m.LembraMe)
                        <div class="form-group">
                            <input type="submit" value="Entrada" class="btn btn-primary" />
                        </div>
                    </div>
                </div>


            }
        </section>

    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")<!--escript de validação-->
} 