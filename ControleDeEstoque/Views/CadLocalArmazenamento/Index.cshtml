@model List<ControleDeEstoque.Models.LocalArmazenamentoModel>
@{
    Layout = "~/Views/Shared/_Cadastro.cshtml"; // HErdando de cadastro.cshtml
    ViewBag.Title = "Locais de Armazenamento";
    ViewBag.Lista = Model;
}

@section Styles{
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/LocalArmazenamento.css" rel="stylesheet" />
}
@section TituloGrid{

    <th>Nome</th>
    <th>Ativo</th>
    <th>Ação</th>
}

@section LinhaGrid{
    @{
        var linha = 0;
        foreach (var item in Model)
        {
            linha++;
            if (linha <= ViewBag.QuantMaxLinhasPorPagina)
            {
                var ativo = (item.Ativo ? "SIM" : "Não");

                <tr data-id="@item.Id">
                    <td>@item.Nome</td>
                    <td>@ativo</td>
                    <td>
                        <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                        <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </td>
                </tr>
            }
            else
            {
                break;
            }
        }
    }
}
@section CamposCadastro{
    <div class="row">
        <div class="form-group">
            @Html.Label("txt_nome", "Nome", new { @class = "col-md-2 col-form-label text-right" })
            <div class="col-md-6">
                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-2 col-form-label text-right" })
            <div class="col-md-6">
                @Html.CheckBox("cbx_ativo")
            </div>
        </div>
    </div>
}
@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script>
       var tituloPagina = '@ViewBag.Title'; // o titulo vem da controller
       var url_excluir = '@Url.Action("ExcluirLocalArmazenamento", "CadLocalArmazenamento")';
       var url_confirmar = '@Url.Action("SalvarLocalArmazenamento", "CadLocalArmazenamento")';
       var url_page_click = '@Url.Action("LocalArmazenamentoPagina", "CadLocalArmazenamento")';
       var url_tam_pag_change = '@Url.Action("LocalArmazenamentoPagina", "CadLocalArmazenamento")';
       var url_alterar = '@Url.Action("RecuperarLocalArmazenamento", "CadLocalArmazenamento")';
    </script>
    <script src="~/Scripts/Cadastro/LocalArmazenamento.js"></script>
}